{% extends 'base.html.twig' %}

{% block title %}
	{{tag.name}}
{% endblock %}

{% block body %}

	<h1>
		{{tag.name}}
	</h1>


	<section class="row">
		{% for photo in photos %}
			<article class="col-4">
				<figure>
					<div class="col-6"><img src="{{photo.url}}" width="600"></div>
					<div class="col-6">
						<h3>Tags</h3>
						{% for tag in photo.tags %}
							<a href="{{ path('app_display_tag', {'slug': tag.slug}) }}">{{tag.name}}</a>

						{% endfor %}
						<h3>Description</h3>
						{{photo.description}}
					</div>
				</figure>
			</article>
		{% endfor %}

	</section>

{% endblock %}
