	<div class="container">
		<div class="row">

			<div class="col-xl-8">
				{% for article in articles %}

					<div class="card border shadow-none">
						<div class="card-body">

							<div class="d-flex align-items-start border-bottom pb-3">
								<div class="me-4">
									<a href="{{ path('app_display_photo', {'slug': article.photo.slug}) }}"><img src="{{ article.photo.url }}" class="avatar-lg rounded" alt="..."></a>
								</div>
								<div class="flex-grow-1 align-self-center overflow-hidden">
									<div>
										<h5 class=" font-size-18">
											<a href="#" class="text-dark">{{ article.photo.title }}
											</a>
										</h5>


									</div>
								</div>
								<div class="flex-shrink-0 ms-2">
									<ul class="list-inline mb-0 font-size-16">
										<li class="list-inline-item">
											<a href="#" class="text-muted px-1">
												<i class="mdi mdi-trash-can-outline"></i>
												TODO
											</a>
										</li>
									</ul>
								</div>
							</div>

							<div>
								<div class="row">
									<div class="col-md-4">
										<div class="mt-3">
											<p class="text-muted mb-2">Price</p>
											<h5 class="mb-0 mt-2">
												<span class="text-muted me-2"></span>
												{{ article.photo.price }}</h5>
										</div>
									</div>
									<div class="col-md-5">
										<div class="mt-3">
											<p class="text-muted mb-2">Quantity</p>
											<div class="d-inline-flex">
												<h5>{{ article.amount }}</h5>
											</div>
										</div>
									</div>
									<div class="col-md-3">
										<div class="mt-3">
											<p class="text-muted mb-2">Total</p>
											<h5>{{ article.photo.price *  article.amount}}
												{% set total = total + article.photo.price *  article.amount %}</h5>
										</div>
									</div>
								</div>
							</div>

						</div>
					</div>

				{% endfor %}
				<div class="row my-4"><!-- end col -->

					<!-- end col -->
				</div>
				<!-- end row-->
			</div>

			<div class="col-xl-4">
				<div class="mt-5 mt-lg-0">
					<div class="card border shadow-none">
						<div class="card-header bg-transparent border-bottom py-3 px-4">
							<h5 class="font-size-16 mb-0">Order Summary
							</h5>
						</div>
						<div class="card-body p-4 pt-2">

							<div class="table-responsive">
								<table class="table mb-0">
									<tbody>
										<tr>
											<td>Sub Total :</td>
											<td class="text-end">{{total}}</td>
										</tr>
										<tr>
											<td>Livraison :</td>
											<td class="text-end">{% set total = total + 0.05 %}{{total * 0.05}}</td>
										</tr>
										<tr>
											<td>TVA :</td>
											<td class="text-end">{% set total = total * 1.2 %}{{total * 0.2}}</td>
										</tr>

										<tr class="bg-light">
											<th>Total :</th>
											<td class="text-end">
												<span class="fw-bold">
													{{total}}
												</span>
											</td>
										</tr>
										<tr class="bg-light">
											<td class="text-end">
												<div class="col-sm-6">
													<div class="text-sm-end mt-2 mt-sm-0">
														<a href="ecommerce-checkout.html" class="btn btn-success ">
															<i class="mdi mdi-cart-outline me-1 "></i>
															Checkout
														</a>
													</div>
												</div>
											</td>
										</tr>
									</tbody>
								</table>
							</div>
						</div>
					</div>
				</div>
			</div>
		</div>
		<!-- end row -->

	</div>


{% endblock %}
